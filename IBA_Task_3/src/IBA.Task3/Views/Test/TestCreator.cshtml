@{
    ViewData["Title"] = "CreateTest";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IBA.Task3.TestModel

<h2>Создание теста</h2>

@using (Html.BeginForm(FormMethod.Post))
{
    @*@Html.AntiForgeryToken()*@

    <div class="card-body">
        <div class="form-group">
            @Html.LabelFor(model => model.Name, "Название теста:")
            @Html.TextBoxFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Attempts, "Выберите количество попыток:")
            @Html.TextBoxFor(model => model.Attempts)
            @Html.ValidationMessageFor(model => model.Attempts)
        </div>       
        <div class="form-group">
            <input type="submit" name="submit" class="btn btn-danger" value="Далее" />
        </div>
    </div>
}






